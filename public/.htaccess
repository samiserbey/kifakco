<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Don't rewrite files that actually exist (like images, CSS, JS)
  RewriteCond %{REQUEST_FILENAME} !-f
  
  # Forward all other requests to index.html (including directory-like paths)
  RewriteRule ^ index.html [QSA,L]
</IfModule>

# Fallback for servers without mod_rewrite
<IfModule !mod_rewrite.c>
  ErrorDocument 404 /index.html
</IfModule>
